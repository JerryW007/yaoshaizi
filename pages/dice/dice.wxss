.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.dice {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx 0;
  background: #fff;
  border: 4rpx solid #999;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.dice.rolling {
  animation: shake 0.5s infinite;
}

.dice-face {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
}

.roll-button {
  background: #1aad19;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  margin: 40rpx 0;
}

.total-rolls {
  margin: 20rpx 0;
  color: #666;
}

@keyframes shake {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(10deg); }
  75% { transform: rotate(-10deg); }
  100% { transform: rotate(0deg); }
} 